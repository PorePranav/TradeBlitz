generator client {
  provider = "prisma-client-js"
  output   = "../src/types/prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id         String         @id @default(uuid())
  userId     Int
  securityId Int
  type       OrderType
  side       Side
  quantity   Float
  price      Float?
  status     OrderStatus @default(OPEN)
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
}

enum OrderType {
  MARKET
  LIMIT
}

enum Side {
  BUY
  SELL
}

enum OrderStatus {
  OPEN
  FILLED
  PARTIALLY_FILLED
  CANCELLED
  REJECTED
}
